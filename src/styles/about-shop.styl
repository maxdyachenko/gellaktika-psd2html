.about-our-shop
	display flex
	margin-top 55px
	margin-bottom 90px
	.logo
		margin-right 25px
		flex-shrink 0
		width 196px
		height 153px
	h3
		font 500 25px / 1.4 'Roboto'
	p
		margin-top 24px
		font 400 15px / 1.4 'Roboto'
@media (max-width: 800px)
	.about-our-shop
		width 100%
		margin-top 20px
		margin-bottom 30px
		.logo
			display none
@media (max-width: 768px)
	.about-our-shop
		padding 15px
		h3
			font-size 22px
			color #009CED
		.text
			text-align center