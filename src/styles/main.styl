.main-content-wrapper
	padding-left 20px
	padding-right 10px
	margin-right -10px
	h2
		color COLOR_BRAND_BLUE
	.header-title
		display flex
		align-items center
		justify-content space-between
	.advantages
		display flex
		justify-content space-between
		margin-top 30px
		.item
			display flex
			flex-basis 230px
			padding 10px
		.icon
			padding-bottom 7px
			margin-right 15px
			flex-shrink 0
		.text
			font 400 14px / 1.4 'Roboto'
	.owl-theme .owl-nav [class*=owl-]
		background transparent
		&:hover
			background transparent !important
	.owl-dots
		padding-top 20px
	.owl-nav
		position absolute
		width 100%
		height 100%
		top 0
		left 0
	.owl-common-styles
		.control
			position absolute
			top 50%
			transform translateY(-100%)
			left 20px
			width 44px
			height 43px
			background url(../images/control.png) 0 0/ contain no-repeat
			transition background .25s
			&:hover
				background url(../images/control-active.png) 0 0/ contain no-repeat
			&.right
				left auto
				right 20px
				transform translateY(-100%) rotate(180deg)
	.owl-carousel-main
		max-width 912px
	.owl-carousel
		.item
			width 100%
			max-height 330px
			background black
	.owl-carousel-sales
		width 452px
		height 656px
		.owl-stage-outer
			height 100%
	.owl-carousel-news, .owl-carousel-new-products
		max-width 452px
		max-height 350px
		background COLOR_BRAND_GREY4
	.owl-carousel-new-products
		width 49.6%
		margin-top 10px
	.owl-dot span
		width 15px !important
		height @width
		background transparent !important
		border 1px solid COLOR_BRAND_PINK
	.owl-dot.active span
		background COLOR_BRAND_PINK !important
	.card-product
		padding 28px 33px 16px 33px
		margin 0 -5px
	.static-banners
		display flex
		justify-content space-between
		flex-wrap wrap
		.static
			margin-top 20px
			width 298px
			height @width
			background COLOR_BRAND_GREY4
@media (max-width: 1200px)
	.main-content-wrapper
		.products-content .right-products
			flex-direction row
@media (max-width: 1024px)
	.main-content-wrapper
		.static-banners
			display none
		.advantages .item
			flex-wrap wrap
@media (max-width: 955px)
	.main-content-wrapper
		.owl-carousel-sales
			order -1
			align-self center
		.products-content
			.cards-wrapper.with-order
				justify-content center
			.left-products, .right-products
				flex-wrap wrap
				width 100%
				justify-content space-around
				flex-direction row
			.left-products
				margin-top 55px
@media (max-width: 800px)
	.main-content-wrapper
		padding-left 0
		.owl-carousel-new-products, .owl-carousel-news, .owl-carousel-sales
			display none !important
@media (max-width: 500px)
	.main-content-wrapper
		.advantages
			flex-wrap wrap
			.item
				flex-basis 50%