.products-content
	margin-top 30px
	.gradient-button
		display block
		width 100%
		padding 7px
		text-transform uppercase
		text-align center
		font 400 16px / 1.4 'Roboto'
		color COLOR_BRAND_WHITE
		background url(../images/gradient.jpg) 0 0 / cover no-repeat
.cards-wrapper
	display flex
	justify-content space-between
	flex-wrap wrap
	margin-top 20px
	.card-product
		position relative
		display inline-block
		flex-basis 24%
		cursor pointer
		transition all .3s
		margin-bottom 10px
		&:hover
			border 1px solid COLOR_BRAND_BLUE
			.add-to-favorites, .product-in-card
				opacity 1
	.card-image
		max-width 170px
		margin auto
	.name
		margin-top 15px
		color COLOR_BRAND_PINK3
		font 400 14px / 1.4 'Roboto'
		text-align center
	.price
		margin-top 5px
		font 500 21px  /1.4 'Roboto'
		text-align center
	.add-to-favorites
		opacity 0
		display flex
		justify-content center
		align-items center
		border-radius 50%
		position absolute
		top 10px
		right 10px
		width 36px
		height @width
		background COLOR_BRAND_GREY3
		transition all .3s
		&.added
			opacity 1 !important
		&:hover
			background COLOR_BRAND_GREY2
	.product-in-card
		opacity 0
		display inline-table
		position absolute
		left 50%
		top 100%
		transform translateX(-50%) translateY(-23%)
		padding 6px 20px
		font 400 12px / 1.4 'Roboto'
		text-align center
		border 1px solid COLOR_BRAND_BLUE
		border-radius 30px
		background COLOR_BRAND_WHITE
		transition all .3s
		.underlined
			text-decoration underline
			color COLOR_BRAND_BLUE
	.card-footer
		margin-top 15px
		display flex
		justify-content space-between
		flex-wrap wrap
@media (max-width: 1100px)
	.cards-wrapper .card-product
		flex-basis 32%
@media (max-width: 700px)
	.cards-wrapper .card-product
		flex-basis 47%
@media (max-width: 500px)
	.cards-wrapper .card-product
		flex-basis 100%
